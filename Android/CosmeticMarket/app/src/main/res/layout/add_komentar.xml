<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:layout_height="wrap_content">

    <LinearLayout

        android:id="@+id/layoutComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/relativLayoutComments">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Novi komentar"
                android:id="@+id/txtComment"
                android:layout_toLeftOf="@+id/btnAddComment"


                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/colorAccent"
                android:layout_alignBottom="@id/txtComment"
                android:src="@drawable/ic_insert_comment_black_24dp"
                android:background="#00000000"
                android:layout_marginBottom="6dp"
                android:id="@+id/btnAddComment"

                />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
</LinearLayout>